<%layout("boiler")%>
    <main class="full">
        <div class="bkgImg"> </div>
        <div class="afterReg">
            <%if (fail.length!==0){%>
                <div class="errorFlash">
                    <i class="fa fa-times red-color "></i>
                    <div>
                        <%=fail%>
                    </div>

                </div>
                <%}%>

                    <div class="pageTitle">artibrowse</div>

                    <section class="centered">
                        <div class="log-text">Sign up for artibrowse</div>
                        <form method=POST action="/register">
                            <div class="fb">
                                <input type="text" name="email" class="textarea" placeholder="Email">
                                <div>
                                    <div class="fas fa-caret-down show"></div>

                                </div>
                            </div>

                            <div class="fb">
                                <input type="text" name="username" class="textarea" placeholder="Username">
                                <div>
                                    <div class="fas fa-caret-down show"></div>

                                </div>
                            </div>

                            <div class="fb">
                                <input type="password" name="password" class="textarea" placeholder="Password">
                                <div>
                                    <div class="fas fa-caret-down show"></div>

                                </div>
                            </div>

                            <div class="btn">
                                <button>Register</button>
                            </div>

                        </form>
                        <div class="log-text">or</div>
                        <form method=GET action="/login">
                            <div class="btn">
                                <button>login</button>
                            </div>
                        </form>

                    </section>
        </div>

    </main>